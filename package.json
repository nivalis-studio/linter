{
  "name": "@nivalis/linter",
  "version": "0.0.1",
  "module": "src/index.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "bunx patch-package",
    "build": "unbuild",
    "prepublishOnly": "unbuild",
    "prepack": "unbuild"
  },
  "bin": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "unbuild": {
    "rollup": { "esbuild": { "target": "node18", "minify": true } },
    "declaration": true,
    "clean": true,
    "failOnWarn": false,
    "exports": "named",
    "preserveModules": true,
    "sourcemap": true
  },
  "devDependencies": {
    "@types/bun": "latest",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "@biomejs/wasm-bundler": "^1.8.3",
    "@biomejs/wasm-nodejs": "^1.8.3",
    "@biomejs/wasm-web": "^1.8.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@biomejs/js-api": "^0.6.2",
    "eslint": "^9.10.0"
  }
}
