{
  "name": "@nivalis/linter",
  "version": "0.0.1",
  "module": "src/index.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "description": "Lint your code with Biome and ESLint at once",
  "license": "MIT",
  "homepage": "https://github.com/nivalis-studio/linter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivalis-studio/linter.git"
  },
  "bugs": {
    "url": "https://github.com/nivalis-studio/linter/issues"
  },
  "keywords": [
    "biome",
    "eslint"
  ],
  "scripts": {
    "postinstall": "bunx patch-package",
    "build": "unbuild",
    "prepublishOnly": "unbuild",
    "prepack": "unbuild"
  },
  "bin": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "unbuild": {
    "rollup": { "esbuild": { "target": "node18", "minify": true } },
    "declaration": true,
    "clean": true,
    "failOnWarn": false,
    "exports": "named",
    "preserveModules": true,
    "sourcemap": true
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "@biomejs/wasm-bundler": "^1.8.3",
    "@biomejs/wasm-nodejs": "^1.8.3",
    "@biomejs/wasm-web": "^1.8.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@biomejs/js-api": "^0.6.2",
    "eslint": "^9.10.0",
    "yargs": "^17.7.2"
  }
}
